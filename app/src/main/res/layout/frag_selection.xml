<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.mcrosco.dadissimo.MainActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6">

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="Result Dices"
                    android:textColor="#222222"
                    android:id="@+id/textView2"
                    android:layout_marginTop="10dp"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text4"
                    android:text="D4:"
                    android:textSize="22dp"
                    android:layout_marginTop="10dp"
                    android:textColor="#222222"
                    android:layout_below="@id/textView2"/>



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text6"
                    android:layout_below="@id/text4"
                    android:text="D6:"
                    android:textSize="22dp"
                    android:textColor="#222222"
                    android:layout_marginTop="15dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text8"
                    android:layout_below="@id/text6"
                    android:text="D8:"
                    android:textSize="22dp"
                    android:textColor="#222222"
                    android:layout_marginTop="13dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text10"
                    android:layout_below="@id/text8"
                    android:text="D10:"
                    android:textSize="22dp"
                    android:layout_marginTop="13dp"
                    android:textColor="#222222"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text12"
                    android:layout_below="@id/text10"
                    android:text="D12:"
                    android:textSize="22dp"
                    android:layout_marginTop="14dp"
                    android:textColor="#222222"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text20"
                    android:layout_below="@id/text12"
                    android:text="D20:"
                    android:textSize="22dp"
                    android:textColor="#222222"
                    android:layout_marginTop="18dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text100"
                    android:layout_below="@id/text20"
                    android:text="D100:"
                    android:textSize="22dp"
                    android:textColor="#222222"
                    android:layout_marginTop="17dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/totale"
                    android:layout_below="@id/text100"
                    android:text="TOTAL:"
                    android:textSize="25dp"
                    android:textColor="#222222"
                    android:layout_marginTop="30dp"/>


            </RelativeLayout>
        </ScrollView>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            >

            <ScrollView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_below="@+id/sopra">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Choice Dices"
                        android:id="@+id/sceltadadi"
                        android:layout_marginTop="10dp"
                        android:textSize="22dp"
                        android:textColor="#222222"/>

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/d4"
                        android:textSize="20dp"
                        android:text="D4"
                        android:layout_marginTop="6dp"
                        android:layout_below="@+id/sceltadadi"
                        />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/d4"
                        android:maxLines="1"
                        android:hint="n°"
                        android:layout_alignBottom="@+id/d4"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/editD4"/>

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/d6"
                        android:text="D6"
                        android:textSize="20dp"
                        android:layout_below="@+id/d4"
                        android:layout_marginTop="8dp"
                        />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/editD6"
                        android:maxLines="1"
                        android:hint="n°"
                        android:layout_below="@+id/editD4"
                        android:layout_toRightOf="@+id/d6"
                        android:layout_marginLeft="10dp"
                        android:layout_alignBottom="@+id/d6"
                        />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/d8"
                        android:layout_below="@+id/d6"
                        android:layout_marginTop="8dp"
                        android:text="D8"
                        android:textSize="20dp" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/editD8"
                        android:maxLines="1"
                        android:hint="n°"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/d6"
                        android:layout_below="@+id/editD6"
                        />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/d10"
                        android:layout_below="@+id/d8"
                        android:text="D10"
                        android:textSize="20dp"
                        android:layout_marginTop="8dp"/>

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/editD10"
                        android:maxLines="1"
                        android:hint="n°"
                        android:layout_marginLeft="10dp"
                        android:layout_alignBottom="@+id/d10"
                        android:layout_toRightOf="@id/d10"
                        android:layout_below="@+id/editD8" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/d12"
                        android:layout_below="@+id/d10"
                        android:text="D12"
                        android:textSize="20dp"
                        android:layout_marginTop="10dp"/>

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/editD12"
                        android:maxLines="1"
                        android:hint="n°"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/d12"
                        android:layout_below="@+id/editD10" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/d20"
                        android:text="D20"
                        android:textSize="20dp"
                        android:layout_below="@+id/d12"
                        android:layout_marginTop="10dp"
                         />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/editD20"
                        android:maxLines="1"
                        android:hint="n°"
                        android:layout_alignBottom="@+id/d20"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/d20"
                        android:layout_below="@+id/editD12" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/d100"
                        android:text="D100"
                        android:textSize="20dp"
                        android:layout_below="@+id/d20"
                        android:layout_marginTop="8dp"
                         />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/editD100"
                        android:maxLines="1"
                        android:hint="n°"
                        android:layout_alignBottom="@+id/d100"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/d100"
                        android:layout_below="@+id/editD20" />





                </RelativeLayout>

            </ScrollView>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SAVE"
                android:gravity="center"
                android:id="@+id/buttonSave"
                android:textColor="#ffffff"
                android:layout_centerHorizontal="true"
                android:background="@drawable/blu4"
                android:layout_alignParentTop="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RESET"
                android:id="@+id/buttonReset"
                android:textColor="#ffffff"
                android:layout_centerHorizontal="true"
                android:background="@drawable/rosso4"
                android:layout_alignParentTop="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="THROW"
                android:gravity="center"
                android:id="@+id/buttonThrow"
                android:layout_centerHorizontal="true"
                android:background="@drawable/verde4"
                android:textColor="#ffffff"
                android:layout_alignParentTop="true" />
        </RelativeLayout>


    </LinearLayout>

</LinearLayout>
